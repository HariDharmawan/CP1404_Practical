BoxLayout:
    orientation: 'vertical'
    BoxLayout:
        Button:
            text: 'Clear'
            on_press: app.handle_clear()
            size_hint_x: 1

        TextInput:
            id: input_name
            text: ''
            size_hint_x: 3

    BoxLayout:
        Button:
            text: 'Greet'
            on_press: app.handle_greet()
            size_hint_x: 1

        Label:
            id: output_label
            text: 'Enter your name'
            color: (1,1,0,1)
            size_hint_x: 3